
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Categories</h1>
<div class="row m-2">
    @foreach (var cat in ViewBag.Category)
    {
        <div class="card m-2">
            <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(cat.Photo))" />
            <div class="card-body text-center">
                <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="SubCategories" asp-route-id="@cat.id">
                    <h5 class="card-title">@cat.Name</h5>
                </a>
            </div>
        </div>
    }
</div>
<h1>SubCategories</h1>
<div class="row container mt-3" style="align-content:center">
    @foreach (var SubCat in ViewBag.SubCategory)
    {
        <div class="card m-2">
            <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(SubCat.Photo))" alt="Card image cap">
            <div class="card-body text-center">
                <div>
                    <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Products" asp-route-name="@SubCat.Name">
                        <h5>@SubCat.Name</h5>
                    </a>
                </div>
            </div>
        </div>
    }
 <div>
<h1>Products</h1>
<div class="row container mt-3" style="align-content:center">
    @foreach (var Product in ViewBag.Products)
    {
        <div class="card m-2">
            <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(Product.Photo))" alt="Card image cap">
            <div class="card-body text-center">
                <div>
                        <h5>@Product.name</h5>
                        <a asp-action="Details" asp-area="" asp-controller="Products" asp-route-id="@Product.id" class="flex-fill btn btn-outline-primary">View</a>
                </div>
            </div>
        </div>
    }
 <div>
<style>
     .card {
        width: 18rem;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
        border-radius: 50%;
        overflow: hidden;
     }
    .card-img-top {
        height: 200px;
        object-fit: cover;
        background-color:aqua
    }
    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #f0c14b;
        border-color: #a88734 #9c7e31 #846a29;
    }

    .btn-primary:hover {
        background-color: #f7dfa5;
        border-color: #a88734 #9c7e31 #846a29;
    }
</style>
