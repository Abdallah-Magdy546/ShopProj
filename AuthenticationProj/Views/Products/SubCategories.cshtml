@model List<SubCategory>

@{
    ViewData["Title"] = "SubCategories";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="text-align:center ">What Product Do You Need ?</h1>

<div class="row container mt-3" style="align-content:center">
    @foreach (var SubCat in Model)
    {
        <div class="card m-2">
            <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(SubCat.Photo))" alt="Card image cap">
            <div class="card-body text-center">
                <div>
                    <a class="btn btn-primary " asp-action="Products" asp-route-name="@SubCat.Name">
                        <h5>@SubCat.Name</h5>
                    </a>
                </div>
            </div>
        </div>
        
    }
    <div>
    <a asp-action="Index" class="mt-3">Return To Categories</a>
    </div>
</div>
<style>
    .card {
        width: 18rem;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #f0c14b;
        border-color: #a88734 #9c7e31 #846a29;
    }

        .btn-primary:hover {
            background-color: #f7dfa5;
            border-color: #a88734 #9c7e31 #846a29;
        }
</style>
