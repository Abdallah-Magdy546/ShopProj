@model Product
@{
    ViewData["Title"] = "product";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>
    The Product Details
</h1>

<div>
    <h4>Product</h4>
    <div class="mt-3">
            <div class="card">
                <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(Model.Photo))" />
               <div class="card-body text-center">
                <h2 class="card-title">@Model.name</h2>
                <h5>@Model.brand</h5>
                <h5>@Model.model</h5>
                <h5>@Model.SellerName</h5>
                <h5>@Model.ProductionDate</h5>
                <h3>@Model.price</h3>
               </div>
             <a class="btn btn-primary" asp-action="AddToCart" asp-area="" asp-controller="Products"
               asp-route-ProductId="@Model.id" asp-route-name="@ViewBag.SubCategoryName">Add To Cart</a>
            </div>
    </div>
</div>
<div>
    <a asp-action="Products" class="btn btn-primary" asp-route-name="@ViewBag.SubCategoryName">Back to List</a>  |
    <a asp-action="Index" class="btn btn-primary">Return To Categories</a>
</div>
<style>
    .card {
        width: 18rem;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #f0c14b;
        border-color: #a88734 #9c7e31 #846a29;
    }

        .btn-primary:hover {
            background-color: #f7dfa5;
            border-color: #a88734 #9c7e31 #846a29;
        }
</style>