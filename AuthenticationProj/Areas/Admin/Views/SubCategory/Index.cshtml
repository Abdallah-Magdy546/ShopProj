@model List<AllSubCategoriesAndCategoriesForm>

@{
    ViewData["Title"] = "SubCategories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>
    SubCategories
</h1>
<a asp-action="Create" class="btn btn-primary m-2">Create New</a>
<div class="row">
    @foreach (var SubCat in Model)
    {
        <div class="card m-2">
            <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(SubCat.Photo))" alt="Card image cap">
            <div class="card-body">
                <div>
                    <h3>NAME :</h3>
                    <h5>@SubCat.name</h5>
                </div>
                <div>
                    <h3>Category :</h3>
                    <h5>@SubCat.CatName</h5>
                </div>
                <a asp-action="Details" asp-route-id="@SubCat.id" class="flex-fill btn btn-outline-primary">View</a>
                <a asp-action="Edit" asp-route-id="@SubCat.id" class="flex-fill btn btn-outline-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@SubCat.id" class="flex-fill btn btn-outline-danger">Delete</a>
            </div>
        </div>
    }
</div>
<style>
    .card {
        width: 18rem;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #f0c14b;
        border-color: #a88734 #9c7e31 #846a29;
    }

        .btn-primary:hover {
            background-color: #f7dfa5;
            border-color: #a88734 #9c7e31 #846a29;
        }
</style>