@model UserRolesViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@*@using Microsoft.AspNetCore.Identity*@
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>
                @Model.UserName
            </h2>
            @localizer["Add/Remove Roles"]
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="UserId" />
            @for(int i=0;i<Model.Roles.Count;i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].DisplayValue"/>
                    <input asp-for="@Model.Roles[i].IsSelected" calss="form-check-input"/>
                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                        @Model.Roles[i].DisplayValue
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">@localizer["Save"]</button>
            <a asp-action="Index" class="btn btn-secondary">@localizer["Cancel"]</a>
        </div>
    </div>
</form>