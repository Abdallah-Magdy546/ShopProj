@model List<AllCategoriesAndSubCategoriesForm>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>
    Categories
</h1>
<a asp-action="Create" class="btn btn-primary m-2">Create New</a>
<div class="row">
    @foreach (var Cat in Model)
    {
        <div class="card m-2">
                <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(Cat.Photo))" />
                <div class="card-body">
                    <h5 class="card-title">@Cat.name</h5>
                    @foreach(var SubCat in Cat.SubCatsNames)
                    {
                        <p class="card-text">@SubCat</p>
                    }
                        <a asp-action="Details" asp-route-id="@Cat.id" class="btn btn-sm btn-outline-secondary">View</a>
                        <a asp-action="Edit" asp-route-id="@Cat.id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Cat.id" class="btn btn-sm btn-outline-secondary">Delete</a>
                </div>
        </div>
    }
</div>
<style>
    .card {
        width: 18rem;
        border: 1px solid #ddd;
        margin-bottom: 20px;
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #f0c14b;
        border-color: #a88734 #9c7e31 #846a29;
    }

    .btn-primary:hover {
        background-color: #f7dfa5;
        border-color: #a88734 #9c7e31 #846a29;
    }
</style>

