@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="form" method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="input-grup">
        <div class="row">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name OF Category" required />
        </div>
        <div class="row">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control" type="file" placeholder="Category Photo" required />
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary mt-2">Create New Category</button>
            <a asp-action="Index" class="btn btn-primary mt-2 ml-2">Back to List</a>
        </div>
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
</form>