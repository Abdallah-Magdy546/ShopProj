@model CategoriesAndSubCategoriesForm

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>
    The Category Details
</h1>

<div>
    <h4>Category</h4>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top"  src="data:image;base64,@(Convert.ToBase64String(Model.Photo))">
        <div class="card-body">
            <div class="row">
                <h3>ID :</h3>
                <h5 class="card-title">@Model.id</h5>
            </div>
            <div class="row">
                <h3>NAME :</h3>
                <h5 class="card-title">@Model.name</h5>
            </div>
            <div class="row">
                <h3>NO.SubCategories:</h3>
                <h5>@ViewBag.NumOfSubCategory</h5>
            </div>
            @foreach(var SubCat in Model.SubCats)
            {
                <p class="card-text">@SubCat</p>
            }
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.id" class="btn btn-primary">Delete</a>
        </div>
    </div>
</div>
