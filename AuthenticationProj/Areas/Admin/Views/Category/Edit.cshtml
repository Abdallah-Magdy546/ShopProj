@model Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form class="form" method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="input-grup">
        <input asp-for="id" type="hidden" value="@Model.id" />
        <div class="row">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="@Model.Name" required />
        </div>
        <div class="row">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" type="file" class="form-control" required />
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary mt-2">Edit The Category</button>
            <a asp-action="Index" class="btn btn-primary mt-2 ml-2" >Back to List</a>
        </div>
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
</form>
